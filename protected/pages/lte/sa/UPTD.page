                                <div class="alert alert-warning">
                                    <button class="close" data-dismiss="alert">Ã—</button>
                                    <p>Tidak ada UPTD yang terdaftar</p>
                                </div>                            
                            </prop:EmptyTemplate>
                        </com:TActiveRepeater>                    
                        <%include Application.CustomPaging%>
                    </div>
                </div>
            </div>
        </div>       
    </com:TPanel>    
</com:TContent>