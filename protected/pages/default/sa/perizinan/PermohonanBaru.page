<%@ Title="Perizinan - Permohonan Baru" %>
<com:TContent ID="moduleheader">
    <i class="fa fa-ticket"></i> PERMOHONAN BARU
</com:TContent>
<com:TContent ID="maincontent">
    <com:TPanel Visible="<%= $this->getEditProcess(false) %>" CssClass="row-fluid">
        <com:TActiveHiddenField ID="hiddenkode_updt" />        
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading-process">                        
                    <h3 class="panel-title">
                        <i class="fa fa-pencil"></i>
                        UBAH UPDT
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group" id="divEditKodeUPDT">
                        <label>Kode</label>
                        <com:TActiveTextBox ID="txtEditKodeUPDT" Columns="4" MaxLength="4" Attributes.OnKeyUp="formatangka(this,true)" CssClass="form-control" Width="70px" Attributes.PlaceHolder="kode" />			                            
                        <com:TRequiredFieldValidator ID="FieldEditKodeValidator" ControlToValidate="txtEditKodeUPDT" Display="Dynamic" ErrorMessage="Isi Kode UPDT" ValidationGroup="editUPDT" FocusOnError="true" CssClass="has-error help-block">			
                            <prop:ClientSide.OnValidationError>
                                $('divEditKodeUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldEditKodeValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divEditKodeUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                        <com:TActiveCustomValidator ID="editKodeUPDT" ControlToValidate="txtEditKodeUPDT" Display="Dynamic" OnServerValidate="checkId" ValidationGroup="editUPDT" ErrorMessage="Kode UPDT Yang Anda Inputkan Sudah Ada" FocusOnError="true" CssClass="has-error help-block">
                            <prop:ClientSide.OnValidationError>
                                $('divEditKodeUPDT').addClassName('has-error');
                                jQuery('#<%=$this->addKodeUPDT->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divEditKodeUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TActiveCustomValidator>                        
                    </div>
                    <div class="form-group" id="divEditNamaUPDT">
                        <label>Nama UPDT</label>
                        <com:TTextBox ID="txtEditNamaUPDT" CssClass="form-control" Width="350px" Attributes.PlaceHolder="nama UPDT" />
                        <com:TRequiredFieldValidator ID="FieldEditNamaUPDTValidator" ControlToValidate="txtEditNamaUPDT" Display="Dynamic" ErrorMessage="Isi Nama UPDT" ValidationGroup="editUPDT" FocusOnError="true" CssClass="has-error help-block">				
                            <prop:ClientSide.OnValidationError>
                                $('divEditNamaUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldEditNamaUPDTValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divEditNamaUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                    </div>
                    <div class="form-group" id="divEditAlamatUPDT">
                        <label>Alamat</label>
                        <com:TTextBox ID="txtEditAlamatUPDT" Columns="60" CssClass="form-control" Width="450px" Attributes.PlaceHolder="alamat UPDT" />
                        <com:TRequiredFieldValidator ID="FieldEditAlamatUPDTValidator" ControlToValidate="txtEditAlamatUPDT" Display="Dynamic" ErrorMessage="Isi Alamat UPDT" ValidationGroup="editUPDT" FocusOnError="true" CssClass="has-error help-block">
                            <prop:ClientSide.OnValidationError>
                                $('divEditAlamatUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldEditAlamatUPDTValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divEditAlamatUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                         <com:TDropDownList ID="cmbEditStatus" CssClass="form-control" Width="150px">
                            <com:TListItem Value="1" Text="Aktif" />
                            <com:TListItem Value="0" Text="Tidak Aktif" />                                
                        </com:TDropDownList>
                    </div>                    
                </div>
                <div class="panel-footer">
                    <com:TActiveLinkButton ID="btnUpdate" CssClass="btn btn-primary" OnClick="updateData" ValidationGroup="editUPDT">
                        <prop:Text><i class="fa fa-save"></i> Simpan</prop:Text>
                        <prop:ClientSide.OnPreDispatch>
                            $('loading').show();                                             
                            $('<%=$this->btnUpdate->ClientId%>').disabled='disabled';						
                        </prop:ClientSide.OnPreDispatch>
                        <prop:ClientSide.OnLoading>
                            $('<%=$this->btnUpdate->ClientId%>').disabled='disabled';						
                        </prop:ClientSide.OnLoading>
                        <prop:ClientSide.OnComplete>																	
                            $('<%=$this->btnUpdate->ClientId%>').disabled='';						                                            
                            $('loading').hide(); 
                        </prop:ClientSide.OnComplete>
                    </com:TActiveLinkButton>
                </div>
            </div>
        </div>        
    </com:TPanel>
    <com:TPanel Visible="<%= $this->getAddProcess(false) %>" CssClass="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading-process">                        
                    <h3 class="panel-title">
                        <i class="fa fa-plus"></i>
                        TAMBAH UPDT
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group" id="divKodeUPDT">
                        <label>Kode</label>
                        <com:TActiveTextBox ID="txtAddKodeUPDT" Columns="4" MaxLength="4" Attributes.OnKeyUp="formatangka(this,true)" CssClass="form-control" Width="70px" Attributes.PlaceHolder="kode" />			                            
                        <com:TRequiredFieldValidator ID="FieldAddKodeValidator" ControlToValidate="txtAddKodeUPDT" Display="Dynamic" ErrorMessage="Isi Kode UPDT" ValidationGroup="addUPDT" FocusOnError="true" CssClass="has-error help-block">			
                            <prop:ClientSide.OnValidationError>
                                $('divKodeUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldAddKodeValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divKodeUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                        <com:TActiveCustomValidator ID="addKodeUPDT" ControlToValidate="txtAddKodeUPDT" Display="Dynamic" OnServerValidate="checkId" ValidationGroup="addUPDT" ErrorMessage="Kode UPDT Yang Anda Inputkan Sudah Ada" FocusOnError="true" CssClass="has-error help-block">
                            <prop:ClientSide.OnValidationError>
                                $('divKodeUPDT').addClassName('has-error');
                                jQuery('#<%=$this->addKodeUPDT->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divKodeUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TActiveCustomValidator>                        
                    </div>
                    <div class="form-group" id="divNamaUPDT">
                        <label>Nama UPDT</label>
                        <com:TTextBox ID="txtAddNamaUPDT" CssClass="form-control" Width="350px" Attributes.PlaceHolder="nama UPDT" />
                        <com:TRequiredFieldValidator ID="FieldAddNamaUPDTValidator" ControlToValidate="txtAddNamaUPDT" Display="Dynamic" ErrorMessage="Isi Nama UPDT" ValidationGroup="addUPDT" FocusOnError="true" CssClass="has-error help-block">				
                            <prop:ClientSide.OnValidationError>
                                $('divNamaUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldAddNamaUPDTValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divNamaUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                    </div>
                    <div class="form-group" id="divAlamatUPDT">
                        <label>Alamat</label>
                        <com:TTextBox ID="txtAddAlamatUPDT" Columns="60" CssClass="form-control" Width="450px" Attributes.PlaceHolder="alamat UPDT" />
                        <com:TRequiredFieldValidator ID="FieldAddAlamatUPDTValidator" ControlToValidate="txtAddAlamatUPDT" Display="Dynamic" ErrorMessage="Isi Alamat UPDT" ValidationGroup="addUPDT" FocusOnError="true" CssClass="has-error help-block">
                            <prop:ClientSide.OnValidationError>
                                $('divAlamatUPDT').addClassName('has-error');
                                jQuery('#<%=$this->FieldAddAlamatUPDTValidator->ClientID%>').removeAttr('style');
                            </prop:ClientSide.OnValidationError>
                            <prop:ClientSide.OnValidationSuccess>
                                $('divAlamatUPDT').removeClassName('has-error');
                            </prop:ClientSide.OnValidationSuccess>
                        </com:TRequiredFieldValidator>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                         <com:TDropDownList ID="cmbAddStatus" CssClass="form-control" Width="150px">
                            <com:TListItem Value="1" Text="Aktif" />
                            <com:TListItem Value="0" Text="Tidak Aktif" />                                
                        </com:TDropDownList>
                    </div>                    
                </div>
                <div class="panel-footer">
                    <com:TActiveLinkButton ID="btnSave" CssClass="btn btn-primary" OnClick="saveData" ValidationGroup="addUPDT">
                        <prop:Text><i class="fa fa-save"></i> Simpan</prop:Text>
                        <prop:ClientSide.OnPreDispatch>
                            $('loading').show();                                             
                            $('<%=$this->btnSave->ClientId%>').disabled='disabled';						
                        </prop:ClientSide.OnPreDispatch>
                        <prop:ClientSide.OnLoading>
                            $('<%=$this->btnSave->ClientId%>').disabled='disabled';						
                        </prop:ClientSide.OnLoading>
                        <prop:ClientSide.OnComplete>																	
                            $('<%=$this->btnSave->ClientId%>').disabled='';						                                            
                            $('loading').hide(); 
                        </prop:ClientSide.OnComplete>
                    </com:TActiveLinkButton>
                </div>
            </div>
        </div>        
    </com:TPanel>
    <com:TPanel Visible="<%= $this->getDefaultProcess(false) %>" CssClass="row-fluid">  
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">                        
                        <h3 class="panel-title">
                            <i class="fa fa-search"></i>
                            Pencarian dan Filter Data
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Kriteria</label>                                                        
                            <com:TDropDownList ID="cmbKriteria" AutoPostBack="false" CssClass="form-control" Width="150px;">
                                <com:TListItem Text="Kode" value="kode"/>
                                <com:TListItem Text="UPDT" value="nama_updt"/>
                            </com:TDropDownList>
                        </div>
                        <div class="form-group" id="divtxtKriteria">
                            <label>Isi Kriteria</label>                        
                            <com:TTextBox ID="txtKriteria" CssClass="form-control" Width="250px;" />
                            <com:TRequiredFieldValidator ID="spanTxtKriteriaValidator" ControlToValidate="txtKriteria" Display="Dynamic" ErrorMessage="Isi Kriteria pencarian" ValidationGroup="filterForm" FocusOnError="true" CssClass="has-error help-block">				
                                <prop:ClientSide.OnValidationError>
                                    $('divtxtKriteria').addClassName('has-error');
                                    jQuery('#<%=$this->spanTxtKriteriaValidator->ClientID%>').removeAttr('style');                                
                                </prop:ClientSide.OnValidationError>
                                <prop:ClientSide.OnValidationSuccess>
                                    $('divtxtKriteria').removeClassName('has-error');
                                </prop:ClientSide.OnValidationSuccess>
                            </com:TRequiredFieldValidator>                        
                        </div>  
                    </div>                    
                    <div class="panel-footer">
                        <com:TActiveLinkButton ID="btnSearch" CssClass="btn btn-outline btn-primary" Text="<i class='fa fa-search'></i> Cari" Attributes.Title="Cari" OnClick="filterRecord" ValidationGroup="filterForm">                        
                            <prop:ClientSide.OnPreDispatch>
                                $('loading').show();                                             
                                $('<%=$this->btnSearch->ClientId%>').disabled='disabled';						
                            </prop:ClientSide.OnPreDispatch>
                            <prop:ClientSide.OnLoading>
                                $('<%=$this->btnSearch->ClientId%>').disabled='disabled';									                            
                            </prop:ClientSide.OnLoading>
                            <prop:ClientSide.onComplete>
                                $('loading').hide();
                                $('<%=$this->btnSearch->ClientId%>').disabled='';
                            </prop:ClientSide.OnComplete>
                        </com:TActiveLinkButton>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">                        
                        <h3 class="panel-title">
                            <i class="fa fa-building-o"></i>
                            Daftar UPDT yang Terdaftar
                        </h3>
                    </div>
                    <div class="panel-body">
                        <p class="text-right">                            
                            <com:TLinkButton ID="add" CssClass="btn btn-outline btn-primary" Text="<i class='fa fa-plus'></i>" Attributes.Title="Tambah UPDT" OnClick="setIdProcess" CausesValidation="false" />                                                                                                               
                        </p>
                        <com:TActiveRepeater ID="RepeaterS" DataKeyField="idupdt" AllowPaging="true" PageSize="10" AllowCustomPaging="true">
                            <prop:HeaderTemplate>			
                                <table class="table table-striped table-bordered table-hover">	
                                    <thead>
                                    <tr>                                                                
                                        <th style="width:18px" class="text-center">NO</th>
                                        <th width="70">KODE</th>
                                        <th class="text-center">NAMA UPDT</th>                        
                                        <th class="text-center">ALAMAT</th>
                                        <th class="text-center">STATUS</th>
                                        <th width="150" class="text-center">AKSI</th>							
                                    </tr>								
                                    </thead>
                                    <tbody>
                            </prop:HeaderTemplate>
                            <prop:ItemTemplate>
                                <tr>			                                
                                    <td><%#$this->DataItem['no']%></td>
                                    <td><%#$this->DataItem['idupdt']%></td>	
                                    <td><%#$this->DataItem['nama_updt']%></td>											                   
                                    <td><%#$this->DataItem['alamat_updt']%></td>
                                    <td class="text-center"><i class="fa <%=$this->DataItem['enabled']==true?'fa-check-circle':'fa-times-circle'%>"></i></td>
                                    <td class="text-center"> 
                                        <com:TLinkButton CausesValidation="false" CssClass="btn btn-info" Text="<i class='fa fa-pencil'></i>" Attributes.Title="Ubah UPDT" OnClick="Page.editRecord" />                                                                                                                                              
                                        <com:TActiveLinkButton ID="btnDeleteRecord" CausesValidation="false" ClientSide.PostState="false" CssClass="btn btn-small btn-danger" OnClick="Page.deleteRecord" Attributes.Title="Hapus UPDT" Text="<i class='fa fa-times'></i>" Attributes.OnClick="if(!confirm('Anda ingin menghapus UPDT ini ?')) return false;">
                                            <prop:ClientSide.OnPreDispatch>
                                                $('loading').show();                                                                                         
                                                $('<%=$this->btnDeleteRecord->ClientId%>').disabled='disabled';									                                
                                            </prop:ClientSide.OnPreDispatch>
                                            <prop:ClientSide.OnLoading>
                                                $('<%=$this->btnDeleteRecord->ClientId%>').disabled='disabled';									                                
                                            </prop:ClientSide.OnLoading>
                                            <prop:ClientSide.onComplete>                                            
                                                $('loading').hide();
                                            </prop:ClientSide.OnComplete>
                                        </com:TActiveLinkButton>
                                    </td>
                                </tr>
                            </prop:ItemTemplate>				
                            <prop:AlternatingItemTemplate>
                                <tr>			                                
                                    <td><%#$this->DataItem['no']%></td>
                                    <td><%#$this->DataItem['idupdt']%></td>	
                                    <td><%#$this->DataItem['nama_updt']%></td>											                   
                                    <td><%#$this->DataItem['alamat_updt']%></td>
                                    <td class="text-center"><i class="fa <%=$this->DataItem['enabled']==true?'fa-check-circle':'fa-times-circle'%>"></i></td>
                                    <td class="text-center"> 
                                        <com:TLinkButton CausesValidation="false" CssClass="btn btn-info" Text="<i class='fa fa-pencil'></i>" Attributes.Title="Ubah UPDT" OnClick="Page.editRecord" />                                                                                                                                              
                                        <com:TActiveLinkButton ID="btnDeleteRecord" CausesValidation="false" ClientSide.PostState="false" CssClass="btn btn-small btn-danger" OnClick="Page.deleteRecord" Attributes.Title="Hapus UPDT" Text="<i class='fa fa-times'></i>" Attributes.OnClick="if(!confirm('Anda ingin menghapus UPDT ini ?')) return false;">
                                            <prop:ClientSide.OnPreDispatch>
                                                $('loading').show();                                                                                         
                                                $('<%=$this->btnDeleteRecord->ClientId%>').disabled='disabled';									                                
                                            </prop:ClientSide.OnPreDispatch>
                                            <prop:ClientSide.OnLoading>
                                                $('<%=$this->btnDeleteRecord->ClientId%>').disabled='disabled';									                                
                                            </prop:ClientSide.OnLoading>
                                            <prop:ClientSide.onComplete>                                            
                                                $('loading').hide();
                                            </prop:ClientSide.OnComplete>
                                        </com:TActiveLinkButton>
                                    </td>
                                </tr>
                            </prop:AlternatingItemTemplate>
                            <prop:FooterTemplate>               
                                </tbody>
                                </table>
                            </prop:FooterTemplate>	
                            <prop:EmptyTemplate>                                                                                    
                                <div class="alert alert-warning">
                                    <button class="close" data-dismiss="alert">Ã—</button>
                                    <p>Tidak ada UPDT yang terdaftar</p>
                                </div>                            
                            </prop:EmptyTemplate>
                        </com:TActiveRepeater>                    
                        <%include Application.CustomPaging%>
                    </div>
                </div>
            </div>
        </div>       
    </com:TPanel>    
</com:TContent>